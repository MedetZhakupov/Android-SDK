<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorInverse"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/DList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
    
    <View android:id="@+id/MLDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5" />
    
     <TextView
        android:id="@+id/LSTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/FDStoreTitle"
        android:textColor="@color/textSecondaryColor"
        android:textSize="14sp" />
     
    <TextView
            android:id="@+id/DStorePos"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/FDStore"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
    
    <TextView
            android:id="@+id/DRestorePos"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/FDRestore"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
    
    <TextView
            android:id="@+id/DDeletePos"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/FDDelete"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
    
    <View android:id="@+id/MLDivider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5" />
    
    <TextView
            android:id="@+id/DLogout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />

</LinearLayout>